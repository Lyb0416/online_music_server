<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyb.olinemusicserver.mapper.SingerMapper">

    <resultMap id="BaseResultMap" type="com.lyb.olinemusicserver.model.domain.Singer">
            <id property="id" column="id" />
            <result property="name" column="name" />
            <result property="gender" column="gender" />
            <result property="pic" column="pic" />
            <result property="birth" column="birth" />
            <result property="location" column="location" />
            <result property="introduction" column="introduction" />
    </resultMap>

    <sql id="Base_Column_List">
        id,name,gender,pic,birth,location,
        introduction
    </sql>
    <delete id="deleteIds">
        delete FROM singer WHERE id IN (${ids}) ;
    </delete>
</mapper>
